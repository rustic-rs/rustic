{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "config:recommended",
        ":dependencyDashboard",
        "helpers:pinGitHubActionDigests"
    ],
    "separateMinorPatch": false,
    "major": {
        "dependencyDashboardApproval": true
    },
    "labels": [
        "A-dependencies"
    ],
    "packageRules": [
        {
            "matchDatasources": [
                "github-actions"
            ],
            "labels": [
                "A-ci"
            ]
        }
    ],
    "lockFileMaintenance": {
        "enabled": true,
        "extends": [
            "schedule:monthly"
        ]
    }
}
